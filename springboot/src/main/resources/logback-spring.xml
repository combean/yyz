    <!--<logger name="org.hibernate.type" level="TRACE" />-->

    <root level="INFO">
        <!--<appender-ref ref="STDOUT" />-->
        <appender-ref ref="INFO_FILE" />
        <appender-ref ref="ERROR_FILE" />
    </root>

