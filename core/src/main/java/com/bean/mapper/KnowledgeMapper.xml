        knowledge_name = #{knowledgeName,jdbcType=VARCHAR},
      </if>
      <if test="memo != null">
        memo = #{memo,jdbcType=VARCHAR},
      </if>
      <if test="del != null">
        del = #{del,jdbcType=BIT},
      </if>
      <if test="editname != null">
        editname = #{editname,jdbcType=VARCHAR},
      </if>
      <if test="editid != null">
